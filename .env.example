# Node Environment
NODE_ENV=production

# Server Configuration
PORT=3001
WS_PORT=8080

# WAF Configuration
WAF_MODE=block # monitor, block, or learning
ENABLE_AI=true
ENABLE_WEBSOCKET=true
ENABLE_DASHBOARD=true

# Security
JWT_SECRET=your-secret-key-here
API_KEY=your-api-key-here

# Rate Limiting
RATE_LIMIT_WINDOW=60000 # 1 minute in milliseconds
RATE_LIMIT_MAX=100 # max requests per window

# Logging
LOG_LEVEL=info # debug, info, warn, error
LOG_DIR=./logs
LOG_MAX_SIZE=52428800 # 50MB
LOG_MAX_FILES=10

# AI Configuration
AI_MODEL_TYPE=autoencoder # autoencoder, isolation-forest, one-class-svm
AI_THRESHOLD=0.85
AI_MEMORY_LIMIT=536870912 # 512MB
AI_UPDATE_INTERVAL=3600000 # 1 hour

# Redis Configuration (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Dashboard
DASHBOARD_PATH=/waf-admin
CLIENT_SCRIPT_PATH=/waf-client.js

# Performance
MAX_REQUEST_SIZE=10485760 # 10MB
REQUEST_TIMEOUT=30000 # 30 seconds

# CORS
CORS_ORIGIN=*
CORS_CREDENTIALS=true